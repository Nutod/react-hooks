{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": ["./app/components/*"],
      "@context/*": ["./app/contexts/*"],
      "@hooks/*": ["./app/hooks/*"],
      "@utils/*": ["./app/utils/*"]
    },
    "target": "es5",
    "module": "commonjs",
    "lib": ["DOM", "ESNext"],
    "jsx": "react",
    "noEmit": true,
    "isolatedModules": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["app/**/*"]
}
